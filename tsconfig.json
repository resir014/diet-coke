{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
